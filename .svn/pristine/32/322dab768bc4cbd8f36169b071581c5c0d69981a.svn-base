component-coupon-modal {
    .wrap {
        width: 100%;
        height: 100%;
        position: relative;
        z-index: 150;
        .but {
            position: absolute;
            width: 100%;
            height: 4rem;
            border-radius: 0;
            bottom: 0;
            margin: 0;
            padding: 0;
        }
        .choose_wrap {
            position: absolute;
            bottom: 4rem;
            width: 100%;
            height: 29.33rem;
            background: #FFFFFF;
            &>p {
                font-family: PingFangSC-Regular;
                font-size: 1.5rem;
                color: #000000;
                letter-spacing: 2px;
                line-height: 5.17rem;
                text-align: center;
            }
            .in_wrap {
                width: 100%;
                height: 24.16rem;
                overflow-y: scroll;
                ._item {
                    width: 100%;
                    height: 3rem;
                    position: relative;
                    p {
                        font-family: PingFangSC-Regular;
                        position: absolute;
                        letter-spacing: 0;
                        color: #DF3F43;
                        font-size: 1.5rem;
                        left: 1.25rem;
                        line-height: 3rem;
                    }
                    .p1 {
                        left: 8rem;
                        font-size: 1.25rem;
                        color: #999999;
                    }
                    ._icon {
                        font-size: 2.5rem;
                        position: absolute;
                        right: 1.25rem;
                        top: 0.5rem;
                    }
                }
            }
        }
    }
}