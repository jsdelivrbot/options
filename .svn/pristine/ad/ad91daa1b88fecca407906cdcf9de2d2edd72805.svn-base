<ion-header>
    <ion-navbar>
        <ion-title>修改绑定手机</ion-title>
    </ion-navbar>
</ion-header>
<ion-content>
    <img src="assets/images/my/my_phone_img.png" class="sd_img">
    <form [formGroup]="passwordForm" (ngSubmit)="modify(passwordForm.value);$event.preventDefault();$event.stopPropagation();">
        <!-- <ion-item style="font-size:1.25rem;margin-top:0.8rem;">
            <ion-label color="dark">原手机号码</ion-label>
            <ion-input disabled placeholder="150***00000" type="number"></ion-input>
        </ion-item> -->
        <ion-item style="font-size:1.25rem;height:4.5rem;margin-top:0.8rem;">
            <ion-label color="dark">新手机号码</ion-label>
            <ion-input formControlName="account" placeholder="请输入新手机号" type="tel"></ion-input>
            <ion-icon *ngIf="passwordForm.controls.account.valid && passwordForm.controls.account.dirty" item-end name="ios-checkmark-circle" style="color:#51C332"></ion-icon>
            <ion-icon *ngIf="!passwordForm.controls.account.valid && passwordForm.controls.account.dirty" item-end name="ios-close-circle" style="color:red"></ion-icon>
        </ion-item>
        <ion-item style="font-size:1.25rem;height:4.5rem;border-bottom: none;">
            <ion-label color="dark">验&nbsp;&nbsp;&nbsp;&nbsp;证&nbsp;&nbsp;&nbsp;&nbsp;码</ion-label>
            <ion-input formControlName="verify" placeholder="请输入验证码" type="tel"></ion-input>
            <ion-icon *ngIf="passwordForm.controls.verify.valid && passwordForm.controls.verify.dirty" item-end name="ios-checkmark-circle" style="color:#51C332"></ion-icon>
            <ion-icon *ngIf="!passwordForm.controls.verify.valid && passwordForm.controls.verify.dirty" item-end name="ios-close-circle" style="color:red"></ion-icon>
            <button ion-button item-end outline (click)="getVerifyCode(passwordForm.controls.account.value);$event.preventDefault();$event.stopPropagation();" [disabled]="!passwordForm.controls.account.valid||submitstate">{{verifystate}}</button>
        </ion-item>
        <br>
        <br>
        <button ion-button block style="margin:0 4%;width:92%;" [disabled]="!passwordForm.valid||submitted">确定</button>
    </form>
</ion-content>