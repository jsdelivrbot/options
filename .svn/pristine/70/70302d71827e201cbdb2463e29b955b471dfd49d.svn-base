        tr {
            td {
                font-family: PingFangSC-Regular;
                font-size: 1.25rem;
                color: #000000;
                letter-spacing: 0;
                text-align: left;
                padding: 0.85rem 1.25rem;
            }
        }
    }
    .color1 {
        color: #FF4C52!important;
    }
    .color2 {
        color: #3AA0F6!important;
    }
