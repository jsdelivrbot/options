page-subscription {
    .div_wrap {
        width: 92%;
        margin: 0 auto;
        background: #FFFFFF;
        box-shadow: 0 0.25rem 0.9rem 0 rgba(211, 211, 211, 0.50);
        border-radius: 0.33rem;
        padding: 0 1.25rem;
        padding-bottom: 8rem;
        &>div {
            position: relative;
            img {
                position: absolute;
                left: 0;
                top: 1.5rem;
                width: 1.3rem;
                height: 1.3rem;
            }
            .p1 {
                position: absolute;
                left: 1.75rem;
                top: 1.5rem;
                font-family: PingFangSC-Regular;
                font-size: 1.25rem;
                color: #333333;
                letter-spacing: 0;
            }
            .p2 {
                position: absolute;
                right: 0;
                top: 4.5rem;
                font-family: PingFangSC-Regular;
                font-size: 1.25rem;
                color: #999999;
                letter-spacing: 0;
                strong {
                    font-weight: normal;
                    color: #FF5757;
                }
            }
        }
        &>div:nth-child(1) {
            height: 9rem;
            width: 100%;
            input {
                position: absolute;
                top: 4.5rem;
                width: 100%;
                background: #FFFFFF;
                border: none;
                border-bottom: 1px solid #CCCCCC;
                padding-bottom: 3px;
            }
            input::-webkit-input-placeholder {
                font-family: PingFangSC-Regular;
                font-size: 1.25rem;
                color: #CCCCCC;
                letter-spacing: 1px;
            }
        }
        &>div:nth-child(2) {
            height: 8rem;
            position: relative;
            .but_wrap {
                position: relative;
                width: 100%;
                display: flex;
                top: 4rem;
                &>div {
                    flex: 1;
                    border-radius: 0.33rem;
                    height: 2.5rem;
                    text-align: center;
                    border: 1px solid #3AA0F6;
                    margin-right: 0.83rem;
                    transition: .3s ease-in-out;
                    p {
                        font-family: PingFangSC-Regular;
                        font-size: 1rem;
                        color: #3AA0F6;
                        letter-spacing: 0;
                        line-height: 2.5rem;
                    }
                }
                &>div:last-child {
                    margin-right: 0;
                }
                .active {
                    background: #3AA0F6;
                    p {
                        color: #FFFFFF;
                    }
                }
            }
        }
        &>div:nth-child(3) {
            height: auto;
            position: relative;
            .p2 {
                font-family: PingFangSC-Medium;
                font-size: 1.25rem;
                color: #333333;
                letter-spacing: 0;
                position: absolute;
                right: 0;
                top: 4.5rem;
            }
            input {
                position: absolute;
                top: 4.5rem;
                width: 100%;
                background: #FFFFFF;
                border: none;
                border-bottom: 1px solid #CCCCCC;
                padding-bottom: 3px;
            }
            input::-webkit-input-placeholder {
                font-family: PingFangSC-Regular;
                font-size: 1.25rem;
                color: #CCCCCC;
                letter-spacing: 1px;
            }
            .but_wrap {
                position: relative;
                width: 100%;
                height: auto;
                display: flex;
                flex-wrap: wrap;
                top: 7.5rem;
                &>div {
                    transition: .3s ease-in-out;
                    width: 30%;
                    border-radius: 0.33rem;
                    height: 2.5rem;
                    text-align: center;
                    border: 1px solid #3AA0F6;
                    margin-right: 5%;
                    margin-bottom: 0.83rem;
                    p {
                        font-family: PingFangSC-Regular;
                        font-size: 1rem;
                        color: #3AA0F6;
                        letter-spacing: 0;
                        line-height: 2.5rem;
                    }
                }
                &>div:last-child,
                &>div:nth-child(3),
                &>div:nth-child(6) {
                    margin-right: 0;
                }
                .active {
                    background: #3AA0F6;
                    p {
                        color: #FFFFFF;
                    }
                }
            }
        }
    }
}