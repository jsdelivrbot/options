    /***********黑夜主题色************/
    /**********header背景色**********/
    
    .toolbar-background-ios {
        background: #1F2029!important;
    }
    /**********tabbar颜色**********/
    
    .tabs-ios .tabbar {
        background: #1F2029!important;
    }
    /**********head-title**********/
    
    .toolbar-title-ios {
        color: #EEEEEE!important;
    }
    /***********返回键颜色************/
    
    .bar-button-default-ios {
        color: #FFFFFF!important;
    }
    /*************item颜色*************/
    
    .item-ios {
        background: #1F2029!important;
        color: #EEEEEE!important;
        border-bottom: 1px solid #0F1119!important;
    }
    /**********border-bottom**********/
    
    .div_bottom {
        border-bottom: 1px solid #0F1119!important;
    }
    
    .segment-ios .segment-button.segment-activated {
        background: #3AA0F6!important;
    }
    
    #seg_special .segment-button.segment-activated {
        background: #4C4D58!important;
    }
    
    .segment-ios .segment-button {
        border: 1px solid #4C4D58!important;
    }
    
    .label-ios-dark,
    .item-input .label-ios-dark {
        color: #FFFFFF!important;
    }
    
    .item-ios.item-block .item-inner {
        border-bottom: none!important;
    }
    /**********div背景颜色**********/
    
    .div_bgcolor {
        background: #1F2029!important;
    }
    
    .div_redbg {
        background: #1F2029!important;
    }
    
    .list-ios>.item-block:first-child {
        border-top: none!important;
    }
    /**********content背景色*******/
    
    .scroll-content {
        background: #0F1119;
    }
    /*******滚动content背景色********/
    
    .content-ios {
        background: #0F1119!important;
    }
    /**********文字颜色模式1**********/
    
    .th_light {
        color: #EEEEEE !important;
    }
    /**********文字颜色模式2**********/
    
    .th_second {
        color: #EEEEEE!important;
    }
    /**********文字颜色模式3**********/
    
    .th_red {
        color: #DF3F43!important;
    }
    /**********文字颜色模式4**********/
    
    .th_blue {
        color: blue!important;
    }
    /**********文字颜色模式5**********/
    
    .th_gray {
        color: #999999!important;
    }
    
    .th_gray_spec {
        color: #999999!important;
    }
    
    .button-ios {
        background-image: linear-gradient(-135deg, #6FD9FF 0%, #6DB3FF 100%)!important;
