import { Component } from '@angular/core';
import { NavController, NavParams,AlertController } from 'ionic-angular';
import { myService } from "../myService";
import { GlobalData } from "../../../providers/GlobalData";
import {WechatPlugin} from '../../../providers/WechatPlugin';
@Component({
	selector: 'page-recharge',
	templateUrl: 'recharge.html',
})
export class RechargePage {
	passwordForm: any;
	private pay_type:string='kuaijie';
	private moneyamount:number;
	private constr2Data=[1000,3000,5000,10000,30000,50000];
	private selfSet:string;
	private tradeType:number=1;
	private bankTypa:number;
	private choose_bank:string;
	//屏幕分辨比
	public dpr:string=sessionStorage.dpr;
	private bankData:any=[];
	// private showNext:boolean=false;
	private formData:any=[];
	constructor(
		private navCtrl: NavController, 
		private navParams: NavParams,
		private alertCtrl: AlertController,
		private myservice: myService,
		private globaldata: GlobalData,
	) {
		if(navParams.get('rechargeType')){
			this.alertCtrl.create({
				title: '充值成功',
				subTitle: '',
				buttons: [{text: '确定'}]
			}).present();
		}
	}
	ionViewDidLoad() {
		this.getBanks();
		this.moneyamount=this.constr2Data[0];
		this.selfSet='自定义金额'+this.constr2Data[0]+'元起';
	}
	blur(){
		setTimeout(()=>{
			if(!this.moneyamount||isNaN(this.moneyamount)){
				this.moneyamount=this.constr2Data[0];
			}else if(Number(this.moneyamount)<Number(this.constr2Data[0])){
				this.moneyamount=this.constr2Data[0];
			}
		},100)
	}
	//选择金额数值
	choose(val){
		this.moneyamount=val;
	}
	//获取银行列表
	getBanks(){
		this.myservice.getBanks()
		.subscribe(res => {
			if(res.success=="true"){
				if(!res.data)return;
				this.bankData=res.data;
				this.choose_bank=res.data[0].bankCode;
			}else{
				this.alertCtrl.create({
					title: res.errorMsg,
					subTitle: '',
					buttons: [{text: '确定'}]
				}).present();
			}
		})
	}
	//选择支付类型
	chooseType(){
		switch(this.pay_type){
			case 'kuaijie':
				this.tradeType=1;
				break;
			case 'wangyin':
				this.tradeType=2;
				break;
		}
	}
	//选择银行
	chooseBank(){
		// console.log(this.choose_bank)
	}
	sub(){
		this.myservice.Payment(this.moneyamount,this.tradeType)
		.subscribe(res => {
			if(res.success=="true"){
				// this.showNext=true;
				// this.formData=res.data;
				window.location.href=`http://47.97.60.28:7003/recharge.html?hostPath=${res.data.hostPath}&encryp=${res.data.encryp}&url=${res.data.url}&bankCode=${this.choose_bank}`
			}else{
				this.alertCtrl.create({
					title: res.errorMsg,
					subTitle: '',
					buttons: [{text: '确定'}]
				}).present();
			}
		})
	}
}
