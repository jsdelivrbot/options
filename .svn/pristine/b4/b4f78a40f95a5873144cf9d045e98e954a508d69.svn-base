page-inquiryModal {
    .con_wrap {
        width: 100%;
        height: 100%;
    }
    .confirm_1 {
        width: 77%;
        margin: 0 auto;
        margin-top: 6rem;
        z-index: 12;
        background: white;
        border-radius: 0.3rem;
        overflow: hidden;
        position: relative;
        padding: 1.25rem;
        ion-icon {
            position: absolute;
            top: 0.5rem;
            color: #CCCCCC;
            right: 1.25rem;
            font-size: 2.5rem;
        }
        .p1 {
            font-family: PingFangSC-Medium;
            font-size: 1.5rem;
            color: #333333;
            letter-spacing: 0;
            font-weight: bold;
            text-align: center;
        }
        .table1 {
            width: 100%;
            tr {
                td {
                    font-family: PingFangSC-Regular;
                    font-size: 1.25rem;
                    color: #999999;
                    letter-spacing: 0;
                    text-align: left;
                    height: 3.5rem;
                }
                td:nth-child(2) {
                    color: #333333;
                    text-align: right;
                }
            }
        }
        .table2 {
            width: 100%;
            text-align: center;
            td {
                font-family: PingFangSC-Regular;
                font-size: 1.15rem;
                color: #999999;
                letter-spacing: 0;
                height: 2.3rem;
                border: 1px solid #333333;
            }
        }
        .p2 {
            text-align: center;
            font-family: PingFangSC-Regular;
            font-size: 1rem;
            color: #999999;
            letter-spacing: 0;
            padding: 0.83rem 0;
        }
        button {
            width: 100%;
            height: 3.3rem;
        }
    }
}