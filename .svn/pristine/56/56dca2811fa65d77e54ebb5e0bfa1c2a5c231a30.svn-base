news-notice {
    .has-refresher>.scroll-content {
        border-top: none!important;
    }
    .bot_line {
        width: 100%;
        height: 2rem;
        margin-top: 1rem;
        margin-bottom: 1rem;
        p {
            text-align: center;
            color: #c8c7cc;
            font-size: 1.25rem;
            line-height: 2rem;
        }
    }
    .item-ios {
        padding-left: 0!important;
        .item-inner {
            padding-left: 0.83rem!important;
        }
    }
    .red_point {
        width: 0.83rem;
        height: 0.83rem;
        background: #3AA0F6;
        border-radius: 50%;
        border: none;
        position: absolute;
        left: 0.83rem;
        top: 1.8rem;
    }
    .label-ios {
        padding-left: 1.25rem;
    }
}