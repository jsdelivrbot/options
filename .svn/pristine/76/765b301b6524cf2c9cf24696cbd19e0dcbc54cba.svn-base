page-positions {
    .scroll-content {
        border-top: unset!important;
    }
    .font_green {
        color: #37D4A4!important;
    }
    .font_red {
        color: #FF5757!important;
    }
    .bot_line {
        width: 100%;
        height: 2rem;
        margin-top: 1rem;
        margin-bottom: 1rem;
        p {
            text-align: center;
            color: #c8c7cc;
            font-size: 1.25rem;
            line-height: 2rem;
        }
    }
    .wrap {
        .color1 {
            color: #37D4A4;
            span {
                background: #37D4A4;
            }
        }
        .color2 {
            color: #FFB958;
            span {
                background: #FFB958;
            }
        }
        .color3 {
            color: #E91A24;
            span {
                background: #E91A24;
            }
        }
        width: 92%;
        margin: 0.83rem auto;
        position: relative;
        box-shadow: 0 4px 0.8rem 0 rgba(211, 211, 211, 0.50);
        border-radius: 0.3rem;
        padding-bottom: 0.83rem;
        .item_tit {
            width: 100%;
            height: 3.33rem;
            position: relative;
            padding: 0 1.25rem;
            border-bottom: 1px solid rgba(204, 204, 204, 0.5);
            .p1,
            .p2 {
                position: absolute;
                left: 1.25rem;
                top: 1.04rem;
                font-family: PingFangSC-Regular;
                font-size: 1.25rem;
                letter-spacing: 2px;
                em {
                    font-style: normal;
                    color: #999999;
                }
            }
            .p2 {
                left: unset;
                right: 1rem;
            }
        }
        table {
            width: 100%;
            td {
                font-family: PingFangSC-Regular;
                font-size: 1.25rem;
                color: #999999;
                letter-spacing: 0;
                height: 2.2rem;
                padding-left: 0.83rem;
                padding-right: 0.83rem;
            }
            button {
                width: 8rem;
                height: 3.3rem;
            }
            td:last-child {
                text-align: right;
            }
            tr:first-child {
                td:first-child {
                    font-family: PingFangSC-Medium;
                    font-size: 1.5rem;
                    letter-spacing: 0;
                    font-weight: bold;
                    height: 3.5rem;
                    span {
                        display: inline-block;
                        width: 0.7rem;
                        height: 0.7rem;
                        border-radius: 50%;
                        position: relative;
                        top: -0.1rem;
                    }
                }
            }
        }
    }
}