page-live {
    .bot_line {
        width: 100%;
        height: 2rem;
        margin-top: 1rem;
        margin-bottom: 1rem;
        p {
            text-align: center;
            color: #c8c7cc;
            font-size: 1.25rem;
            line-height: 2rem;
        }
    }
    .live_header {
        font-family: PingFangSC-Medium;
        font-size: 2.67rem;
        color: #333333;
        letter-spacing: 0;
        padding-left: 1.25rem;
    }
    .live_wrap {
        width: 100%;
        margin: 1.25rem auto;
        border-radius: 0.5rem;
        position: relative;
        &>div {
            width: 100%;
            height: 100%;
        }
        video {
            width: 100%;
            height: 100%;
        }
        img {
            width: 92%;
            margin-left: 4%;
        }
    }
    .live_tip {
        width: 100%;
        height: 1.25rem;
        position: relative;
        img {
            width: 1.33rem;
            height: 1.17rem;
            position: absolute;
            left: 1.25rem;
        }
        p {
            font-family: PingFangSC-Regular;
            font-size: 1.25rem;
            color: #999999;
            letter-spacing: 0;
            position: absolute;
            left: 3rem;
        }
    }
    .live_record {
        width: 92%;
        margin: 1.25rem auto;
        display: flex;
        flex-wrap: wrap;
        &>div {
            width: 49%;
            height: 14rem;
            margin-bottom: 0.83rem;
            .div1 {
                height: 10.25rem;
                width: 100%;
                border-radius: 0.4rem;
                overflow: hidden;
                img {
                    width: 100%;
                    height: 100%;
                }
            }
            .div2 {
                width: 95%;
                height: 3rem;
                margin-top: 0.75rem;
                overflow: hidden;
                p {
                    font-family: PingFangSC-Regular;
                    font-size: 1rem;
                    color: #333333;
                    letter-spacing: 0;
                    line-height: 1.5;
                }
            }
        }
        &>div:nth-child(even) {
            margin-left: 2%;
        }
    }
}