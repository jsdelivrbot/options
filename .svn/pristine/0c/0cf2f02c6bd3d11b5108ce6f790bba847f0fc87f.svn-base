//-----------------自定义全局样式------------------//
.tabs-ios .tabbar {
    border-top: none;
}

.header-ios .toolbar-background-ios {
    border: none;
}

//header title
.toolbar-title-ios {
    font-family: PingFangSC-Medium;
    font-weight: normal;
}

p {
    -webkit-margin-before: 0;
    -webkit-margin-after: 0;
    -webkit-margin-start: 0;
    -webkit-margin-end: 0;
}

ion-app,
ion-nav,
ion-tab,
ion-tabs,
.app-root,
.ion-page {
    contain: unset!important;
}

.modal-wrapper {
    position: absolute;
    width: 100%;
}

ion-modal ion-backdrop {
    visibility: unset;
}

//取消按钮颜色
.self_cancle_btn {
    color: #979b9e!important;
}

.alert-ios .alert-button:last-child {
    font-weight: normal;
}