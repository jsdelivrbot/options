page-home {
    .home_list {
        background: white;
        .hl_seg {
            width: 15rem;
            position: relative;
            ion-segment {
                width: 14rem;
                position: relative;
                left: 3rem;
            }
            .segment-activated {
                span {
                    width: 3.3rem;
                    height: 2px;
                    background: #FF5757;
                    display: block;
                    margin: 0 auto;
                    position: relative;
                    top: -2px;
                }
            }
            img {
                position: absolute;
                width: 1.8rem;
                height: 1.8rem;
                top: 1rem;
                left: 1.25rem;
            }
        }
        -webkit-perspective:800px;
        .list1 {
            width: 100%;
            height: 5rem;
            position: relative;
            border-bottom: 1px solid #CCCCCC;
            -webkit-transform-style: preserve-3d;
            -webkit-transform-origin: center;
            img {
                width: 1.2rem;
                height: 1.2rem;
                position: absolute;
                left: 1.2rem;
                top: 0.5rem;
            }
            .p1 {
                font-family: PingFangSC-Regular;
                font-size: 1rem;
                color: #999999;
                letter-spacing: 0;
                position: absolute;
                left: 2.8rem;
                top: 0.5rem;
            }
            .p2 {
                font-family: PingFangSC-Regular;
                font-size: 1rem;
                color: #999999;
                letter-spacing: 0;
                position: absolute;
                right: 1.25rem;
                top: 0.5rem;
            }
            .cont {
                width: 100%;
                height: 5rem;
                margin-left: 1.2rem;
                position: relative;
                .p3 {
                    font-family: PingFangSC-Regular;
                    font-size: 1.25rem;
                    color: black;
                    letter-spacing: 0;
                    position: absolute;
                    left: 0;
                    bottom: 0.8rem;
                }
                .p4 {
                    font-family: PingFangSC-Regular;
                    font-size: 1.25rem;
                    color: black;
                    letter-spacing: 0;
                    position: absolute;
                    left: 10rem;
                    bottom: 0.8rem;
                }
            }
        }
        .list2 {
            display: flex;
            padding-right: 1.25rem;
            padding-top: 0.83rem;
            padding-bottom: 0.83rem;
            border-bottom: 1px solid #CCCCCC;
            -webkit-transform-style: preserve-3d;
            -webkit-transform-origin: center;
            &>div {
                .table1 {
                    width: 100%;
                    height: 100%;
                    tr:nth-child(1) td {
                        font-family: PingFangSC-Regular;
                        font-size: 1rem;
                        color: #999999;
                        letter-spacing: 0;
                    }
                    tr:nth-child(2) td {
                        font-family: PingFangSC-Medium;
                        font-size: 2rem;
                        color: #FF5757;
                        letter-spacing: 0;
                        padding: 0.5rem 0;
                    }
                    tr:nth-child(3) td {
                        font-family: PingFangSC-Regular;
                        font-size: 1.25rem;
                        color: #333333;
                        letter-spacing: 0;
                    }
                }
                .table2 {
                    width: 100%;
                    height: 100%;
                    text-align: right;
                    tr:nth-of-type(odd) {
                        td {
                            font-family: PingFangSC-Regular;
                            font-size: 1.17rem;
                            color: #999999;
                            letter-spacing: 0;
                        }
                    }
                    tr:nth-of-type(even) {
                        td {
                            font-family: PingFangSC-Regular;
                            font-size: 1.17rem;
                            color: #333333;
                            letter-spacing: 0;
                        }
                    }
                    tr:nth-child(2) td {
                        padding-bottom: 1rem;
                    }
                }
            }
            &>div:nth-child(1) {
                width: 16%;
                text-align: center;
                img {
                    width: 2.5rem;
                    margin-top: 1.6rem;
                }
            }
            &>div:nth-child(2),
            &>div:nth-child(3) {
                width: 42%;
            }
        }
    }
    .home_sec {
        width: 100%;
        display: flex;
        background: #FFFFFF;
        margin-bottom: 0.83rem;
        .div_bg {
            border-radius: 5px;
            img {
                width: 100%;
                height: 100%;
            }
        }
        div {
            flex: 1;
            text-align: center;
            p:first-child {
                font-family: PingFangSC-Medium;
                font-size: 1.5rem;
                color: #FFFFFF;
                letter-spacing: 0;
                padding-top: 1.5rem;
                font-weight: bold;
            }
            p:last-child {
                font-family: PingFangSC-Regular;
                font-size: 1rem;
                color: #FFFFFF;
                letter-spacing: 0;
            }
        }
        &>div:nth-child(1) {
            margin: 0.83rem 1.25rem;
        }
        &>div:nth-child(2) {
            margin-right: 1.25rem;
            margin-top: 0.83rem;
            margin-bottom: 0.83rem;
        }
    }
    .home_stock {
        width: 100%;
        margin-bottom: 0.41rem;
        background: #FFFFFF;
        padding: 0.83rem 1.5rem;
        min-height: 6.5rem;
        table {
            width: 100%;
            text-align: center;
            tr {
                width: 100%;
                td:nth-child(2) {
                    border-left: 1px solid #CCCCCC;
                    border-right: 1px solid #CCCCCC;
                }
            }
            tr:nth-child(1) {
                td {
                    font-family: PingFangSC-Regular;
                    font-size: 1.17rem;
                    color: #333333;
                    letter-spacing: 0;
                }
            }
            tr:nth-child(2) {
                td {
                    font-family: PingFangSC-Medium;
                    font-size: 1.67rem;
                    letter-spacing: 0;
                    color: #19B03F;
                    padding: 0.25rem 0;
                }
            }
            tr:nth-child(3) {
                td {
                    font-family: PingFangSC-Regular;
                    font-size: 1rem;
                    letter-spacing: 0;
                    color: #19B03F;
                }
            }
        }
    }
    .scroll-content {
        background: #F8F8F8!important;
    }
    .swiper-pagination-bullet {
        width: 4%;
        height: 0.33rem;
        border-radius: 6px;
        background: rgba(255, 255, 255, 0.50);
    }
    .swiper-pagination-bullet-active {
        background: #FFFFFF;
        width: 6.7%;
    }
    .font_red {
        color: #DF3F43!important;
    }
    .font_green {
        color: #19B03F!important;
    }
    em {
        font-style: normal;
    }
    .head_but {
        margin: 0;
        position: absolute;
        right: 1.25rem;
        bottom: 0;
        img {
            height: 1.4rem;
        }
        p {
            font-family: PingFangSC-Regular;
            font-size: 1.4rem;
            letter-spacing: 1.87px;
        }
    }
    .home_banner {
        width: 100%;
        height: auto;
    }
    .slide-zoom {
        height: 100%;
    }
    .home_tip {
        width: 100%;
        height: 3.5rem;
        padding: 0 0.5rem;
        margin-bottom: 0.41rem;
        position: relative;
        background: white;
        .p1 {
            font-family: PingFangSC-Regular;
            font-size: 1.25rem;
            color: #333333;
            letter-spacing: 0;
            position: absolute;
            left: 1.25rem;
            line-height: 3.5rem;
            img {
                width: 1.08rem;
                height: 1.08rem;
            }
        }
        .p2 {
            font-family: PingFangSC-Regular;
            font-size: 1.25rem;
            color: #999999;
            letter-spacing: 0;
            position: absolute;
            right: 1.25rem;
            line-height: 3.5rem;
            img {
                width: 1rem;
                height: 1rem;
            }
        }
        .marqueen {
            width: 65%;
            position: absolute;
            left: 5.5rem;
            height: 3.5rem;
            overflow: hidden;
            p {
                font-family: PingFangSC-Regular;
                font-size: 1rem;
                line-height: 3.5rem;
                letter-spacing: 0;
                color: #999999;
                white-space: nowrap;
                overflow: hidden;
                text-overflow: ellipsis;
            }
        }
    }
    .home_nav {
        width: 100%;
        height: 8.33rem;
        padding: 0 0.5rem;
        display: flex;
        &>div {
            flex: 1;
            height: 100%;
            text-align: center;
            img {
                height: 4.17rem;
                width: 4.17rem;
                margin-top: 0.83rem;
            }
            p {
                padding-top: 0.6rem;
                font-family: PingFangSC-Regular;
                font-size: 1.2rem;
                letter-spacing: 2px;
            }
        }
    }
    .home_income {
        width: 100%;
        // height: 13rem;
        .home_tip {
            p {
                font-family: PingFangSC-Regular;
                font-size: 1.25rem;
                letter-spacing: 0;
                position: absolute;
                left: 3rem;
                line-height: 2.5rem;
            }
        }
        .home_scroll::-webkit-scrollbar {
            display: none;
        }
        .home_scroll {
            width: 100%;
            height: 10rem;
            overflow-x: scroll;
            .scroll_wrap {
                // width: 200rem;
                height: 8.33rem;
                .scroll_cont {
                    float: left;
                    width: 20rem;
                    height: 100%;
                    margin-left: 0.83rem;
                    margin-top: 0.83rem;
                    box-shadow: 0 6px 20px 0 rgba(211, 211, 211, 0.50);
                    border-radius: 0.5rem;
                    position: relative;
                    .avatar {
                        position: absolute;
                        width: 2.5rem;
                        height: 2.5rem;
                        border-radius: 4px;
                        left: 0.83rem;
                        top: 0.83rem;
                    }
                    .p1 {
                        position: absolute;
                        left: 3.75rem;
                        top: 0.63rem;
                        font-family: PingFangSC-Regular;
                        font-size: 1.17rem;
                        letter-spacing: 0;
                        img {
                            width: 1rem;
                            height: 1rem;
                        }
                    }
                    .p2 {
                        position: absolute;
                        left: 3.75rem;
                        top: 2.29rem;
                        font-family: PingFangSC-Regular;
                        font-size: 1rem;
                        letter-spacing: 0;
                    }
                    button {
                        position: absolute;
                        width: 5.42rem;
                        height: 2.08rem;
                        border-radius: 6px;
                        right: 0.83rem;
                        top: 0.83rem;
                        background-image: linear-gradient(46deg, #FF9C62 0%, #FF6363 100%);
                        color: #FFFFFF;
                    }
                    .activated {
                        background-image: linear-gradient(46deg, #ec6c22 0%, #f82d2d 100%)!important;
                    }
                    table {
                        position: absolute;
                        bottom: 0.83rem;
                        width: 100%;
                        text-align: center;
                    }
                }
            }
        }
    }
    .home_news {
        width: 100%;
        height: 11.33rem;
        .home_tip {
            p {
                position: absolute;
                left: 3rem;
                line-height: 2.5rem;
            }
        }
        .home_inwrap {
            width: 100%;
            height: 8rem;
            display: flex;
            .div1 {
                width: 35%;
                padding-top: 0.83rem;
                padding-left: 1.25rem;
                .hn_img {
                    width: 10rem;
                    height: 6.67rem;
                    border-radius: 0.5rem;
                }
            }
            .div2 {
                width: 65%;
                padding-top: 1.25rem;
                p {
                    padding-left: 1.25rem;
                    white-space: nowrap;
                    text-overflow: ellipsis;
                    overflow: hidden;
                }
            }
        }
    }
    .home_foottip {
        width: 100%;
        text-align: center;
        padding: 1.25rem 0;
        img {
            width: 11.42rem;
            height: 1.75rem;
        }
        p {
            font-family: PingFangSC-Regular;
            font-size: 1rem;
            letter-spacing: 1.67px;
            line-height: 1.6rem;
        }
    }
}