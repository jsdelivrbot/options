page-Tabs {
    .tabs-md .tab-button {
        color: #999999;
        min-height: 4rem!important;
    }
    .tabs-md[tabsLayout=icon-top] .has-icon .tab-button-text {
        margin-top: 0;
        margin-bottom: 0;
        position: relative;
        top: -4px;
    }
    .tabs-md .tab-button-icon {
        margin-top: 8px;
        min-width: 2rem;
        font-size: 2rem;
    }
}