@font-face {
    font-family: "Ionicons";
    src: url('../assets/font/fonts/Ionicons.eot');
    src: url('../assets/font/fonts/Ionicons.eot#iefix') format('embedded-opentype'), /* IE6-IE8 */
    url('../assets/font/fonts/Ionicons.woff') format('woff'), /* chrome, firefox */
    url('../assets/font/fonts/Ionicons.ttf') format('truetype'), /* chrome, firefox, opera, Safari, Android, iOS 4.2+*/
    url('../assets/font/fonts/Ionicons.svg#iconfont') format('svg');
    /* iOS 4.1- */
}

